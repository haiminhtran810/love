<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HamburgerFragment">

    <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/pinkishGrey"
            android:id="@+id/lg_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@android:color/black"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/anniversary_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:id="@+id/lg_date"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/lg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:paddingStart="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/date_setting"
                app:layout_constraintStart_toEndOf="@id/img_date"
                android:id="@+id/tv_date_setting"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:paddingStart="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                app:layout_constraintStart_toEndOf="@id/img_date"
                android:id="@+id/tv_date_anniversary"
                app:layout_constraintTop_toBottomOf="@id/tv_date_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.03.10"/>
        <ImageView
                android:src="@drawable/ic_date_range_black_24dp"
                android:id="@+id/img_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lg_title_content"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/lg_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                app:layout_constraintStart_toStartOf="parent"
                android:paddingStart="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/date_setting"
                android:id="@+id/tv_title_bottom"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintStart_toStartOf="parent"
                android:paddingStart="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:id="@+id/tv_title_bottom_content"
                app:layout_constraintTop_toBottomOf="@id/tv_title_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.03.10"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:id="@+id/lg_delete"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/lg_title_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black_24dp"/>

        <TextView
                android:paddingStart="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                app:layout_constraintStart_toEndOf="@id/img_delete"
                android:text="@string/delete"
                app:layout_constraintTop_toBottomOf="@id/lg_title_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_black_24dp"/>

    </LinearLayout>

    <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/lg_title_2"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/lg_delete"
            android:background="@color/pinkishGrey"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@android:color/black"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/app_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:id="@+id/lg_notification"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/lg_title_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notifications_active_black_24dp"/>

        <TextView
                android:paddingStart="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                app:layout_constraintStart_toEndOf="@id/img_delete"
                android:text="@string/notification"
                app:layout_constraintTop_toBottomOf="@id/lg_title_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_black_24dp"/>

    </LinearLayout>

    <TextView
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="@string/faq"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/lg_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/adView"
            ads:adSize="BANNER"
            ads:adUnitId="@string/ads_banner"/>

</androidx.constraintlayout.widget.ConstraintLayout>